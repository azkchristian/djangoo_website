generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String   @unique
  telephone  String   @unique
  password   String
  role       String
  ville      String?
  adresse    String?
  vehicule   String?
  experience String?
  motivation String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Colis {
  id             String   @id @default(uuid())
  code           String   @unique
  expediteur     String
  destinataire   String
  villeDepart    String
  villeArrivee   String
  statut         String
  telephoneDest  String   // ðŸ‘ˆ AJOUT DE CE CHAMP
  steps          Json?
  createdAt      DateTime @default(now())
}

